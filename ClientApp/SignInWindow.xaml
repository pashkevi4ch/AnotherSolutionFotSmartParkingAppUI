<Window x:Class="ClientApp.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="SignInWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock  Grid.Row ="1" FontSize ="30" Margin="15">Login:</TextBlock>
        <TextBlock  Grid.Row ="2" FontSize ="30" Margin="15">Password:</TextBlock>
        <TextBox Name ="SignInLoginBox" Grid.Row="1" Grid.Column="1" Margin="20"></TextBox>
        <PasswordBox Name ="SignInPasswordBox" Grid.Row="2" Grid.Column="1" Margin="20"></PasswordBox>
        <Button Name ="SignInButton" Grid.Column="1" Grid.Row="3" Margin="10" Width="150" HorizontalAlignment="Right" Content="Sign ip" FontSize="20" Height="35" VerticalAlignment="Bottom" Click="SignInButton_Click" ></Button>
        
    </Grid>
</Window>
