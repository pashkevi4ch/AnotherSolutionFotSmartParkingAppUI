<Window x:Class="ClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Margin ="30" VerticalAlignment="Center" FontSize ="20" Grid.ColumnSpan="2" HorizontalAlignment ="Center">Welcome to Smart Parking App!</TextBlock>
        <Button Grid.Column ="0" Grid.Row="1" Name="Sign_In_Button" Click="Sign_In_Button_Click" Margin ="75"> Sign in </Button>
        <Button Grid.Row="1" Grid.Column="1" Name="Sign_Up_Button" Click="Sign_Up_Button_Click" Margin ="75"> Sign up</Button>

    </Grid>
</Window>
